generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  login     String @unique
  version   Int    @default(1)
  createdAt Int
  updatedAt Int
  password  String
}

model Artist {
  id     String   @id @default(uuid())
  name   String
  grammy Boolean? @default(false)
  albums   Album[]
  tracks   Track[]
}

model Album {
  id       String @id @default(uuid())
  name     String
  year     Int?
  artist   Artist? @relation(fields: [artistId], references: [id])
  artistId String?
  tracks   Track[]
}

model Track {
  id       String @id @default(uuid())
  name     String
  artist   Artist? @relation(fields: [artistId], references: [id])
  artistId String?
  album    Album? @relation(fields: [albumId], references: [id])
  albumId  String?
  duration Int
}
